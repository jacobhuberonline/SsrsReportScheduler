{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Quartz": "Information"
    }
  },
  "ReportServer": {
    "BaseUrl": "https://reports.example.com/ReportServer",
    "ExecutionEndpoint": "/ReportExecution2005.asmx",
    "Username": "report_user",
    "Password": "report_password",
    "Domain": "",
    "FolderPath": "/",
    "TimeoutSeconds": 120
  },
  "Output": {
    "Directory": "./output"
  },
  "Sftp": {
    "Host": "sftp.example.com",
    "Port": 22,
    "Username": "sftp_user",
    "Password": "sftp_password",
    "RemoteDirectory": "/reports"
  },
  "Scheduler": {
    "ReportTasks": [
      {
        "Name": "DailySales",
        "ReportPath": "/Sales/DailySales",
        "Format": "PDF",
        "CronExpression": "0 0 6 * * ?",
        "Parameters": {
          "AsOfDate": "2024-01-01"
        },
        "RemoteDirectory": "/reports/sales"
      },
      {
        "Name": "WeeklyInventory",
        "ReportPath": "/Inventory/WeeklySummary",
        "Format": "Excel",
        "CronExpression": "0 30 7 ? * MON",
        "Parameters": {},
        "RemoteDirectory": "/reports/inventory"
      }
    ]
  }
}
